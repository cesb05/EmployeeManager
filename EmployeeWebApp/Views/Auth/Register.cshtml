<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh !important;">
	<div class="card shadow-lg p-4 rounded-4" style="width: 100%; max-width: 350px; height: auto;">
		<h3 class="text-center mb-3 text-primary">Registrarse</h3>

		@if (ViewBag.Error != null)
		{
			<div class="alert alert-danger text-center mb-3">
				@Html.Raw(ViewBag.Error)
			</div>
		}

		@if (ViewBag.Success != null)
		{
			<div class="alert alert-success text-center mb-3">
				@ViewBag.Success
			</div>
		}

		<form method="post">
			<div class="mb-3">
				<label for="email" class="form-label fw-bold">Email</label>
				<input type="email" class="form-control rounded-3" id="email" name="email" placeholder="Ingresa tu correo" required />
			</div>

			<div class="mb-3">
				<label for="password" class="form-label fw-bold">Contraseña</label>
				<input type="password" class="form-control rounded-3" id="password" name="password" placeholder="Ingresa tu contraseña" required />
			</div>

			<div class="mb-3">
				<label for="confirmPassword" class="form-label fw-bold">Confirmar Contraseña</label>
				<input type="password" class="form-control rounded-3" id="confirmPassword" name="confirmPassword" placeholder="Repite tu contraseña" required />
			</div>

			<button type="submit" class="btn btn-primary w-100 rounded-3">
				<i class="fas fa-user-plus"></i> Registrarse
			</button>

			<div class="text-center mt-3">
				<a asp-controller="Auth" asp-action="Login" class="btn btn-outline-secondary w-100 rounded-3">
					Volver al Login
				</a>
			</div>
		</form>
	</div>
</div>
