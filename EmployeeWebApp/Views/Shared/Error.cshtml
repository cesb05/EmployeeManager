@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4>Error</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Acceso no autorizado</h5>

            @if (Model != null && !string.IsNullOrEmpty(Model.Message))
            {
                <p class="text-muted">@Html.Raw(Model.Message)</p>
            }

            @if (Model != null && Model.ShowRequestId)
            {
                <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
            }

            <a href="@Url.Action("Login", "Auth")" class="btn btn-primary mt-3">Go Back to Home</a>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }
</style>